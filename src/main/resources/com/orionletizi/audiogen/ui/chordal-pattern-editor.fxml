<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" prefWidth="500.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.orionletizi.audiogen.ui.controller.ChordalPatternEditorController">
   <children>
      <Separator prefWidth="200.0" />
      <Label text="Tempo" />
      <TextField fx:id="tempoField" promptText="Tempo" />
      <Separator prefWidth="200.0" />
      <Label text="Time Signature" />
      <HBox fx:id="timeSignatureBox" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="1" GridPane.valignment="CENTER">
         <children>
            <TextField fx:id="timeSignatureBeatsPerMeasureField" promptText="Beats Per Measure" />
            <Label text="/" />
            <TextField fx:id="timeSignatureBeatDivisionField" promptText="Beat Division" />
         </children>
      </HBox>
      <VBox fx:id="chordStructureBox" prefHeight="200.0" prefWidth="100.0" spacing="10.0" GridPane.rowIndex="2">
         <children>
            <Separator prefWidth="200.0" />
            <Label text="Chord Structure" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
